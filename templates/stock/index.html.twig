{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
            <br>
                <div
                    class="container-fluid">
                    <!-- Info boxes -->
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-3"></div>
                        <!-- /.col -->

                    </div>
                    <!-- /.row -->
                    <div class="row">

                        <div class="col-md-12">

                            <div class="card">
                                <div class="card-header">
                                    <div class="form-inline">
                                        <form action="{{ path('stock_nb') }}" method="post">
                                            Nb stocks:
                                            <input type="number" name="nb_row" class="form-control" placeholder="Ex: 5">
                                                <button type="submit" class="form-control">Ok</button>
                                            </form>

                                            <form action="{{ path('stock_sessionProduit') }}" method="post" class='marge'>
                                                Unité:
                                                <select class="form-control" name="" id="">
                                                    {% for catuval in catuvals %}
                                                        <option value="{{ catuval.id }}">{{ catuval.nomcatval }}
                                                        </option>

                                                    {% else %}
                                                        <option value="">Liste vide...</option>
                                                    {% endfor %}
                                                </select>
                                                <button class="btn btn-default" type="submit">Ok</button>
                                            </form>

                                            <form action="{{ path('stock_Uval') }}" method="post" class='marge'>
                                                Unité de stockage:
                                                <select class="form-control" name="uval" id="">
                                                    {% for uval in uvals %}
                                                        <option value="{{ uval.id }}">{{ uval.nomuval }}</option>

                                                    {% else %}
                                                        <option value="">Liste vide...</option>
                                                    {% endfor %}
                                                </select>
                                                <button class="btn btn-default" type="submit">Ok</button>
                                            </form>
                                        </div>

                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-header form-inline">
                                        <form action="{{ path('stock_sessionProduit') }}" method="post">
                                            Produit:
                                            <select class="form-control" name="produit" id="">
                                                {% for produit in produits %}
                                                    <option value="{{ produit.id }}">{{ produit.famille.nom }}
                                                        {{ produit.nom }}</option>

                                                {% else %}
                                                    <option value="">Liste vide...</option>
                                                {% endfor %}
                                            </select>
                                            <button class="btn btn-default" type="submit">Ok</button>
                                        </form>

                                        <div class="marge">
                                            <form action="{{ path('stock_index') }}" method="post">
                                                {% if app.session.get('uval') %}
                                                    1
                                                    {{ uvs.nomuval }}
                                                    =
                                                {% else %}
                                                    Unité de stockage ...
                                                {% endif %}
                                                <input type="text" name='qgv' class='form-control col-5' required>
                                                    {% if app.session.get('produit') %}
                                                        {{ uvalprod.uvalp.nomuval }}
                                                    {% else %}
                                                        Unité de vente du produit ...
                                                    {% endif %}

                                                </div>

                                            </div>
                                            <table class=" table-head-fixed">
                                                <thead class="table table-primary table-head-fixed">
                                                    <tr>
                                                        <td colspan='2'>Creation du stock produit</td>
                                                    </tr>
                                                
                                                </thead>
                                            </table>
                                            <div class="card-body table-responsive p-0" style="height: 150px;">
                                                <table class="table table-head-fixed">
                            

                                                <tbody class="table table-light">
                                                    {% for nb_row in nb_rows %}
                                                    <tr>
                                                        <td><input type="text" name="qtet{{ nb_row }}" class="form-control" placeholder="qte total du stock" id=""></td>
                                                        <td><input type="text" name="prixu{{ nb_row }}" class="form-control" placeholder="prix total du stock" id=""></td>
                                                    </tr>
                                                    {% endfor %}
                                                    <tr>
                                                        <td> <button type="submit" name="enregistrer" class="btn btn-success">Enregistrer</button></td>
                                                    </tr>
                                                
                                                </tbody>
                                            </table>
                                                
                                               </form>

                                            </div>
                                            <!-- /.card -->

                                        </div>
                                        <table class="table table-primary table-head-fixed">
                                            <tr>
                                                <td>Devis d'achat</td>
                                            </tr>
                                        </table>
                                        <form action="" method="post" class=''>
                                            <div class="row">
                                                <div class="col-md">
                                                    Entrer votre budjet d'achat
                                                    <input type="text" name="budjet" class="form-control" placeholder="{{ '75000' | number_format(0, ' ', ' ') }}">
                                                </div>
                                                <div class="col-md">
                                                    Entrer le prix unitaire de l'article
                                                    <input type="text" name="prixUnitArt" class="form-control" placeholder="{{ '27000' | number_format(0, ' ', ' ') }}">
                                                </div>
                                                <div class="col-md">
                                                    Sur : {{ budjet | number_format(0, ' ', ' ') }} FCFA, il vous reste
                                                    <input type="text" name="resteBudjet" class="form-control" value="{{ resteBudjet | number_format(0, ' ', ' ') }} FCFA">
                                                </div>
                                                <div class="col-md">
                                                        Devise
                                                        <select type="text" name="" class="form-control">
                                                            <option value="">FCFA</option>
                                                        </select>
                                                    </div>
                                            </div>

                                            <div class="row">
                                                
                                                <div class="col-md">
                                                    Prix total des
                                                    {{ nbArt }}
                                                    Articles
                                                    <input type="text" name="prixTotalArt" class="form-control" value="{{ depenses | number_format(0, ' ', ' ') }}">
                                                </div>
                                                <div class="col-md">
                                                        Devise
                                                        <select type="text" name="" class="form-control">
                                                            <option value="">FCFA</option>
                                                        </select>
                                                </div>
                                                <div class="col-md">
                                                    Nbre Articles possibles
                                                    <input type="text" name="nbArticles" class="form-control" value="{{ nbArt | number_format(0, ' ', ' ') }}"><br>
                                                
                                                </div>
                                                <div class="col-md">
                                                <br>
                                                    <button type="submit" class='btn btn-dark col-md-12'>Traiter le devis d'achat</button>
                                                
                                                </div>
                                            </div>

                                        </form>


                                    </div>

                                    <!-- /.row -->
                                </div>

                            </section>
                        </div>
                    {% endblock %}
