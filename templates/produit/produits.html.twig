{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
			<br>
            <div
                class="container-fluid">
                <!-- Info boxes -->
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3"></div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
                <div class="row">
					<div class="col-md-12">
						<div class="card">
						 <h3 class="card-title">Liste des produits disponibles <a href="{{path('produit_index')}}"><i class="fa fa-pen"></i></a></h3>
							<div class="card-body table-responsive p-0" style="height: 390px;">
								<table class="table table-head-fixed text-nowrap">

									<tbody>
										<tr>
											<th>CODE</th>
											<th>Produit</th>
                                            <th>Prix</th>
                                            <th>Qt√©</th>
                                            <th>Total TTC</th>
											
										</tr>
										{% for produit in produits %}
											<tr>
												<td>{{produit.reference}}</td>
                                                <td>{{produit.nomFamille}} {{produit.nomProduit}}</td>
                                                <td>{{produit.prixDeVente}} FCFA</td>
                                                <td>{{produit.qt}}</td>
                                                <td>{{produit.prixTotalVente}} FCFA</td>
                                            </tr>

										{% else %}
											<tr>
												<td colspan="2">Liste vide !</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>

							</div>
							<!-- /.card-body -->
						</div>
					</div>

                </div>
					
                <!-- /.row -->
            </div>

        </section>
    </div>
{% endblock %}
