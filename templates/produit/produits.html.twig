{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
			<br>
            <div
                class="container-fluid">
                <!-- Info boxes -->
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3"></div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
                <div class="row">
					<div class="col-md-12">
						<div class="card">
						 <h3 class="card-title">Liste des produits disponibles <a href="{{path('produit_index')}}"><i class="fa fa-pen"></i></a></h3>
							<div class="card-body table-responsive p-0" style="height: 390px;">
								<table class="table table-head-fixed table-bordered">

									<tbody>
										<tr>
                                            <th>Famille</th>
											<th>Produit</th>
                                            <th>Code</th>
                                            {# <th>Qt√© Totale</th>
                                            <th>Prix Unitaire</th>
                                            <th>Prix Totoal</th> #}
											
										</tr>
										{% for produit in produits %}
											<tr>
                                                <td>{{produit.famille.nom}}</td>
                                                <td>{{produit.nom}}</td>
                                                <td>{{produit.code}}</td>
                                                {# <td>
                                                    {{produit.nomFamille}} {{produit.nomProduit}} 
                                                </td>
                                                <td>{{produit.unite}}</td>
                                                <td>{{produit.qt| number_format(0, ' ', ' ')}}</td>
                                                <td>{{produit.prixDeVente| number_format(0, ' ', ' ')}} FCFA</td>
                                                <td>{{produit.prixTotalVente| number_format(0, ' ', ' ')}} FCFA</td> #}
                                            </tr>

										{% else %}
											<tr>
												<td colspan="5">Liste vide !</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>

							</div>
							<!-- /.card-body -->
						</div>
					</div>

                </div>
					
                <!-- /.row -->
            </div>

        </section>
    </div>
{% endblock %}
