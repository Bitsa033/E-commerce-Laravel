{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div
        class="content-wrapper">

        <!-- Main content -->
        <section class="content">
			<br>
            <div
                class="container-fluid">
                <!-- Info boxes -->
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3"></div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
                <div class="row">
					<div class="col-md-12">
						<div class="card">
						 <div class="card-header"><p class="h6"><a href="{{path('produit_new')}}">Nouveau Produit</a></p></div>
							<div class="card-body table-responsive p-0" style="height: 310px;">
								<table class="table table-head-fixed table-bordered">

									<tbody>
										<tr>
											<th>Produit</th>
                                            <th>Code</th>
                                            <th>Prix d'achat</th>
                                            <th>Prix de vente</th>
                                            <th>Unité d'achat</th>
                                            <th>Unité de vente</th>
											
										</tr>
										{% for produit in produits %}
											<tr>
                                                <td>{{produit.famille.nom}} <strong>|</strong> {{produit.nom}}</td>
                                                <td>{{produit.code}}</td>
                                                <td>{{produit.prixAchat| number_format(0, ' ', ' ')}} FCFA</td>
                                                <td>{{produit.prixVente| number_format(0, ' ', ' ')}} FCFA</td>
                                                <td>{{produit.uniteAchat.nomuval}}</td>
                                                <td>{{produit.uniteVente.nomuval}}</td>
                                            </tr>

										{% else %}
											<tr>
												<td colspan="5">Liste vide !</td>
											</tr>
										{% endfor %}

									</tbody>
								</table>

							</div>
							<!-- /.card-body -->
                            <div class="card-footer">
                                @Developpeur: BITSA NZDZIE PASCAL
                            </div>
						</div>
					</div>

                </div>
					
                <!-- /.row -->
            </div>

        </section>
    </div>
{% endblock %}
