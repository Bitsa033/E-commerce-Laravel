{% extends 'base.html.twig' %}

{% block title %}Magasin index{% endblock %}

{% block body %}
<div class="offset-4 col-4">

    <h1>Magasin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Capacite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magasin in magasins %}
            <tr>
                <td>{{ magasin.id }}</td>
                <td>{{ magasin.nom }}</td>
                <td>{{ magasin.capacite }}</td>
                <td>
                    <a href="{{ path('magasin_show', {'id': magasin.id}) }}">show</a>
                    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('magasin_new') }}">Create new</a>
</div>
{% endblock %}
